<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <Button android:id="@+id/btn_alpha1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="透明动画"
    />
    <Button android:id="@+id/btn_scale1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缩放动画"
    />
    <Button android:id="@+id/btn_rotate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旋转动画"
    />
    <Button android:id="@+id/btn_translate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平移动画"
    />
    <Button android:id="@+id/btn_loading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载动画"
    />
    <ImageView android:id="@+id/iv_animation1"
               android:layout_width="120dp"
               android:layout_height="150dp"
               android:src="@drawable/welcome"
               android:layout_gravity="center"
    />
    <TextView android:id="@+id/tv_animation"
              android:layout_width="180dp"
              android:layout_height="100dp"
              android:background="#fff"
              android:layout_gravity="center"
              android:text="改变背景颜色"
              />
</LinearLayout>